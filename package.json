{
	"name": "multi-threading-node-js",
	"version": "1.0.0",
	"type": "module",
	"description": "This is a simple example of how to use multi-threading in Node.js with Fastify",
	"main": "./src/server.ts",
	"scripts": {
		"dev": "nodemon -w src -e ts,json --exec tsx src/server.ts",
		"build": "tsc",
		"start": "node dist/server.js",
		"format": "biome format --write .",
		"lint": "biome lint .",
		"check": "biome check .",
		"typecheck": "tsc --noEmit",
		"clean": "rimraf dist"
	},
	"keywords": [
		"Threads",
		"Fastify",
		"Multithreading",
		"Parallelism",
		"Concurrency"
	],
	"author": "miguel-motta",
	"license": "ISC",
	"devDependencies": {
		"@biomejs/biome": "1.9.3",
		"@types/node": "22.13.8",
		"rimraf": "6.0.1",
		"tsx": "4.19.3",
		"typescript": "5.8.2"
	},
	"dependencies": {
		"fastify": "5.2.1",
		"fastify-piscina": "5.0.0",
		"nodemon": "3.1.9",
		"piscina": "5.0.0-alpha.0"
	},
	"engines": {
		"node": ">=22.14.0"
	}
}
